@model Product

<div class="card m-1 p-1">
	<div class="bg-body p-1">
		<h4>
			@Model?.Name
			<span class="badge rounded-pill bg-primary text-white"
				  style="float:right">
				<small>@Model?.Price.ToString("c", new System.Globalization.CultureInfo("en-US"))</small>
			</span>
		</h4>
	</div>
	<div class="card-text p-1">@Model?.Description</div>
</div>