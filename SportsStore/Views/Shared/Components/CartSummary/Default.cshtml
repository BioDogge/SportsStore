@model Cart

<div class="">
	@if(Model.Lines.Count() > 0){
		<small class="navbar-text">
			<b>Your cart:</b>
			@Model.Lines.Sum(m => m.Quantity) item(s)
			@Model.ComputeTotalValue().ToString("c", new System.Globalization.CultureInfo("en-US"))
		</small>
	}
	<a class="btn btn-sm btn-secondary" asp-page="/Cart"
		asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
		<i class="fa fa-shopping-cart"></i>
	</a>
</div>